<?xml version="1.0" encoding="utf-8"?>

<!--
	flShow Carousel 2.0 configuration file
	Please visit http://www.flshow.net/ for more info
-->

<slide_show>
	<options>
		<debug>false</debug>
		<background>#000000</background>		<!-- #RRGGBB, transparent -->
		
		<interaction>
			<rotation>mouse</rotation>			<!-- auto, mouse, keyboard -->
			<view_point>none</view_point>		<!-- none, mouse, keyboard -->
			<speed>20</speed>
			<default_speed>7</default_speed>
			<reset_delay>5</reset_delay>
		</interaction>
		
		<margins>
			<top>0</top>                                <!-- [-1000,1000] pixels -->
            <left>-350</left>                              <!-- [-1000,1000] pixels -->
            <bottom>0</bottom>                          <!-- [-1000,1000] pixels -->
            <right>-350</right>                            <!-- [-1000,1000] pixels -->
			<horizontal_ratio>38%</horizontal_ratio>
			<vertical_ratio>100%</vertical_ratio>		<!-- [1,100] a photo may occupy at most verticalRatio percent of the Carousel height -->
		</margins>
		
		<far_photos>
			<size>0%</size>		<!-- [0,100] percentage -->
			<amount>0%</amount>	<!-- [0,100] percentage -->
			<blur>15</blur>                   <!-- [0,100] amount -->
            <blur_quality>2</blur_quality>    <!-- [1,3] 1=low - 3=high -->
		</far_photos>
		
		<reflection>
			<distance>-20</distance>	<!-- [-1000,1000] pixels -->
			<alpha>75%</alpha>		<!-- [0,100] percentage -->
		</reflection>
	</options>

	<photo>/images/carousel/1.jpg</photo>
	<photo>/images/carousel/2.jpg</photo>
	<photo>/images/carousel/3.jpg</photo>
	<photo>/images/carousel/4.jpg</photo>
	<photo>/images/carousel/5.jpg</photo>
</slide_show>
